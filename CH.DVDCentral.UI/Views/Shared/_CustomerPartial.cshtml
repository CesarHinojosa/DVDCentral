@model IEnumerable<CH.DVDCentral.BL.Models.Customer>

<table id="items" class="table data-table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
               Last Name
            </th>
            <th>
                Address
            </th>
            <th>
                City
            </th>
            <th>
                State
            </th>
            <th>
               Zip
            </th>
            <th>
                Phone
            </th>
            <th>
                Image Path
            </th>

            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImagePath)
                </td>
                <td>
                    <a asp-controller="Customer" asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a asp-controller="Customer" asp-action="Details" class="btn btn-sm btn-primary" asp-route-id="@item.Id">Details</a>
                </td>
                <td>
                    <a asp-controller="Customer" asp-action="Delete" class="btn btn-sm btn-primary" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script type="text/javascript" class="init">

    $.noConflict();
    jQuery(document).ready(function ($) {
        $('#items').DataTable({
            "lengthMenu": [[5, 10, 25, 30, -1], [5, 10, 25, 30, "All"]]
        });

    });


</script>
